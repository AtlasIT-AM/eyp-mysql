<% if defined?(@mailto) -%>
MAILTO="<%= @mailto %>"
<% end -%>
DESTINATION="<%= @destination %>"
<% if defined?(@retention) -%>
RETENTION="<%= @retention %>"
<% end -%>
<% if defined?(@logdir) -%>
LOGDIR="<%= @logdir %>"
<% end -%>
<% if defined?(@idhost) -%>
IDHOST="<%= @idhost %>"
<% end -%>
<% if(@compress) -%>
COMPRESS="<%= @compress %>"
<% end -%>
INSTANCE_NAME="<%= @instance %>"
MASTERDATA="<%= @masterdata %>"
<% if(@file_per_db) -%>
FILE_PER_DB="<%= @file_per_db %>"
<% end -%>
<% if(@backupid) -%>
BACKUP_NAME_ID="<%= @backupid %>"
<% end -%>
<% if defined?(@extraopts) -%>
# extra options for mysqldump
MYSQLDUMP_EXTRAOPTS="<%= @extraopts %>"
<% end -%>
<% if @exclude_dbs.any? -%>
EXCLUDE=(<%= @exclude_dbs.join(' ') %>)
<% end -%>
<% if @debug -%>
DEBUG=1
<% end -%>
